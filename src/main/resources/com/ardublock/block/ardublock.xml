                </BlockConnector>
                <BlockConnector connector-type="string" connector-kind="socket" label="bc.wifiPass" >
                    <DefaultArg genus-name="message" label="senha" />
                </BlockConnector>
            </BlockConnectors>
        </BlockGenus>

